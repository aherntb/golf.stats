@model golf.stats.Models.RoundStatsViewModel
<h1>Score Card</h1>

@using(Html.BeginForm("PostStats","ScoreCard",FormMethod.Post))
{

    <table id="statsTable" class="display" style="width:100%">
        <thead>
        <tr>
            <th>Hole</th>
            @for(int i =1;i<=18;i++)
            {
                <td>@i.ToString() </td>
            }
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>
                Score
            </td>
            
            @for(int i =1;i<=18;i++)
            {
                 <td>@Html.TextBoxFor(m=>m.Score[i])</td>
            }
        </tr>
        <tr>
            <td>
                Tee Shot Club
            </td>
            @for(int i =1;i<=18;i++)
            {
                <td>@Html.DropDownListFor(m=>m.TeeShotClub[i],new SelectList(Enum.GetValues(typeof(GolfBag))),"Select Club") </td>
            }
        </tr>
        <tr>
            <td>
                Fairway in Regulation
            </td>
            @for(int i=1;i<=18;i++)
            {
                <td> @Html.DropDownListFor(m=>m.FairwayInReg[i],new SelectList(Enum.GetValues(typeof(YesNoNa))),"Select") </td>
            }
        </tr>
        
        <tr>
            <td>
                Approach Club
            </td>
            @for(int i =1;i<=18;i++)
            {
                <td>@Html.DropDownListFor(m=>m.ApproachClub[i],new SelectList(Enum.GetValues(typeof(GolfBag))),"Select Club") </td>
            }
        </tr>

        <tr>
            <td>
                Green in Regulation
            </td>
            @for(int i=1;i<=18;i++)
            {
                <td> @Html.DropDownListFor(m=>m.GreenInReg[i],new SelectList(Enum.GetValues(typeof(YesNo))),"Select") </td>
            }
        </tr>

        <tr>
            <td>
                Scrambling
            </td>
            @for(int i=1;i<=18;i++)
            {
                <td> @Html.DropDownListFor(m=>m.Scrambling[i],new SelectList(Enum.GetValues(typeof(YesNoNa))),"Select") </td>
            }
        </tr>
        <tr>
            <td>
                Putts
            </td>
            @for(int i=1;i<=18;i++)
            {
                <td>@Html.TextBoxFor(m=>m.NumOfPutts[i])</td>
            }
        </tr>
        </tbody>
    </table>

    <input type="submit">
}

@section scripts {
    <script type ="text/javascript">
        $(document).ready( function () {
            $('#statsTable').DataTable({
                "aaSorting": [],
                "paging": false,
                "searching":false,
                "columnDefs": [
                         { "searchable": false, "targets": 0 },
                         { "width": "20%", "targets": 0 }
                ]

            });

            
        } );
        
    </script>
}
