@model golf.stats.Models.RoundStatsViewModel
<h1>Score Card</h1>

@using(Html.BeginForm("PostStats","ScoreCard",FormMethod.Post))
{

    <table id="statsTable" class="display" style="width:100%">
       <thead>
           <tr>
               <th>
                   Hole
               </th>
              @for(int i=1;i<=18;i++)
              {
                  <th>
                      @i
                  </th>
              }            
           </tr>
       </thead>       
       <tbody>
           <tr>
               <td>
                   Score
               </td>               
           
               @for(int i =0;i<=17;i++)
               {
                   <td>
                       @Html.TextBoxFor(m=>m.Stats[i].Score,new{@class="statsTextBox"})
                   </td>
               } 
           </tr>
       </tbody>
      
    </table>

    <input type="submit">
}

@section scripts {
    <script type ="text/javascript">
        $(document).ready( function () {
            $('#statsTable').DataTable({
                "aaSorting": [],
                "paging": false,
                "searching":false,
                "columnDefs": [
                         { "searchable": false, "targets": 0 },
                         { "width": "20%", "targets": 0 }
                ]

            });
        $(".statsTextBox").css("width","50px");
            
        } );
        
    </script>
}
